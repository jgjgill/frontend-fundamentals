{
  "name": "frontend-fundamentals",
  "private": true,
  "packageManager": "yarn@4.6.0",
  "workspaces": [
    "fundamentals/*"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "docs:dev": "yarn workspace @frontend-fundamentals/clean-code docs:dev",
    "docs:build": "yarn workspace @frontend-fundamentals/clean-code docs:build",
    "docs:preview": "yarn workspace @frontend-fundamentals/clean-code docs:preview",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,css,html,yml,yaml,scss,sass}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,mdx,css,html,yml,yaml,scss,sass}\" --ignore-path .gitignore",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx,vue}\" --ignore-path .gitignore",
    "lint:fix": "eslint \"**/*.{js,jsx,ts,tsx,vue}\" --fix --ignore-path .gitignore"
  },
  "devDependencies": {
    "prettier": "^3.2.5"
  }
}
